{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que 
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
		<label for="inputEmail">Adresse e-mail</label>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Saisissez votre adresse e-mail">
		<label for="inputPassword">Mot de passe</label>
		<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Saisissez votre mot de passe">

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<p>Mot de passe oublié ?
			<a href={{path('app_reset_password_request')}}>Réinitialiser le mot de passe</a>
		</p>
		<p>Vous n'avez pas encore de compte ?
			<a href={{path('app_register')}}>Créez votre compte ici</a>
		</p>
		<div class="checkbox mb-3">
			<label>
				<input type="checkbox" name="_remember_me">
				Se souvenir de moi
			</label>
		</div>

		<button class="btn btn-lg btn-success" type="submit">
			Se connecter
		</button>
	</form>
{% endblock %}
