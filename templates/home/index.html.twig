{% extends 'base.html.twig' %}

{% block title %}Accueil - NewsApp
{% endblock %}

{% block body %}
	<section class="lastNews">

		<h2>Derni√®res nouvelles</h2>
		{% for one_news in news %}
			<article>
				<h3>{{one_news.title}}</h3>
				<img src="/assets/img/{{one_news.imageName}}">
				<p>
					{% set description_shortened = one_news.description|slice(0, 150)|join(' ') %}
					{{ description_shortened }}
					{% if one_news.description|length > 150 %} ...
					{% endif %}
				</p>
				<a href={{path('app_home_show', {'id': one_news.id})}}>Read More</a>
			</article>
		{% endfor %}
	</section>
{% endblock %}
